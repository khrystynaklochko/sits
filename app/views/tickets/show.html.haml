.row-fluid
  .span9
    %h1= "ticket: #{@ticket.key}"
    - if current_user
      = render 'tickets/show_operator'
    - else
      = render 'tickets/show_customer'
  .span3
    %h4= "all tickets of #{@ticket.email}" 
    .well.well-small
      %ul
        - @related.each do |ticket|
          %li= link_to ticket.subject, ticket


